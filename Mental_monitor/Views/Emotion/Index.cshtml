@model IEnumerable<Entry>

@{
    ViewData["Title"] = "Emotion History";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>ðŸ“Š Emotion History</h2>
    <a asp-controller="Emotion" asp-action="ExportCsv" class="btn btn-outline-success">
        â¬‡ Export CSV
    </a>
</div>

<partial name="_EmotionChart" model="Model" />

<table class="table table-striped align-middle mt-4">
    <thead>
        <tr>
            <th>When</th>
            <th>Entry</th>
            <th>Top Emotions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.CreatedAt.ToLocalTime().ToString("g")</td>
                <td>@(entry.Text.Length > 80 ? entry.Text[..80] + "â€¦" : entry.Text)</td>
                <td>
                    @{
                        var tops = entry.EmotionScores
                        .OrderByDescending(s => s.Score)
                        .Take(3);
                    }
                    @foreach (var s in tops)
                    {
                        <div class="d-flex justify-content-between">
                            <span>@s.EmotionLabel</span>
                            <span class="badge bg-info">@s.Score.ToString("0.0%")</span>
                        </div>
                        <div class="progress mb-1" style="height:6px;">
                            <div class="progress-bar" style="width:@((s.Score * 100).ToString("0"))%"></div>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@model IEnumerable<Entry>
@{
    ViewData["Title"] = "Emotion Trends";
}
<div class="container min-vh-100 bg-trends">
    <div class="glass-card p-4 p-md-5 mt-5" data-aos="fade-up">
        <h2 class="mb-4 text-center">Your Emotion Trends</h2>
        <canvas id="emotionTrend" class="mb-4"></canvas>

        <!-- Journal History -->
        <h4 class="mt-5 mb-3">Journal History</h4>
        <div class="table-responsive">
            <table class="table table-dark table-striped align-middle">
                <thead>
                    <tr>
                        <th>When</th>
                        <th>Entry</th>
                        <th>Top Emotion</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model)
                    {
                        var top = entry.EmotionScores.OrderByDescending(s => s.Score).First();
                        <tr>
                            <td>@entry.CreatedAt.ToLocalTime().ToString("g")</td>
                            <td>@(entry.Text.Length > 60 ? entry.Text[..60] + "…" : entry.Text)</td>
                            <td><span class="badge bg-info">@top.EmotionLabel</span></td>
                            <td>@top.Score.ToString("0.0%")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Emotion" asp-action="ExportCsv" class="btn btn-outline-success btn-hover-lift">⬇ Export CSV</a>
        </div>
    </div>
</div>
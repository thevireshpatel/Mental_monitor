<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] – Mental Monitor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-light sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Mental Monitor</a>
            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Entry" asp-action="Create">Journal</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Emotion" asp-action="Index">Trends</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Alert" asp-action="Index">Alerts</a></li>
                </ul>
                <partial name="_LoginPartial" />
                <button id="themeToggle" class="btn btn-sm btn-outline-secondary ms-2">🌙</button>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            &copy; @DateTime.Now.Year – Mental Monitor
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Single dark/light toggle -->
    <script>
        const btn = document.getElementById('themeToggle');
        const html = document.documentElement;
        const current = localStorage.getItem('theme') || 'light';
        html.setAttribute('data-theme', current);
        btn.textContent = current === 'dark' ? '☀️' : '🌙';
        btn.addEventListener('click', () => {
            const next = html.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
            html.setAttribute('data-theme', next);
            localStorage.setItem('theme', next);
            btn.textContent = next === 'dark' ? '☀️' : '🌙';
        });
    </script>

    <!-- AJAX alert badge -->
    <script>
        async function updateAlertBadge() {
            try {
                const res = await fetch('/Alert/BadgeCount');
                const count = await res.json();
                const badge = document.getElementById('alertBadge');
                if (count > 0) {
                    badge.textContent = count;
                    badge.style.display = 'inline-block';
                } else {
                    badge.style.display = 'none';
                }
            } catch { /* ignore */ }
        }
        updateAlertBadge();
        setInterval(updateAlertBadge, 10000);
    </script>
</body>
</html>